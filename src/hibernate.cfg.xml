<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration SYSTEM "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <!-- SQL connector details -->
    <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="connection.url">jdbc:mysql://localhost:3306/HibernateDemo</property>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQL5Dialect</property>
    <property name="connection.username">root</property>
    <property name="connection.password"></property>
    <property name="connection.pool_size">10</property>
    <property name="show_sql">true</property>
    <property name="format_sql">false</property>
    <property name="hbm2ddl.auto">update</property>
     	
    <!-- second level cache -->  	
  	<property name="hibernate.cache.use_second_level_cache">true</property> 
  	<property name="hibernate.cache.region.factory_class">org.hibernate.cache.ehcache.internal.EhcacheRegionFactory</property>
    <property name="hibernate.cache.use_query_cache">true</property>
    
    <property name="current_session_context_class">thread</property>
    
    <!-- mapping Class -->
    <!-- mapping class="com.mcnz.jpa.examples.Player" / -->
	<!--<mapping class="student.insert.Student"/>-->
	
	<mapping resource="student_m2m.hbm.xml"/>
	<mapping resource="course_m2m.hbm.xml"/>
	
	<mapping resource="department_m2o.hbm.xml"/>
	
	
	<!-- 
	<mapping resource="department_o2m.hbm.xml"></mapping>
	-->
	
	<!-- 
	<mapping resource="employeeo2o.hbm.xml"></mapping>
    <mapping resource="addresso2o.hbm.xml"></mapping> 
  	-->
  </session-factory>
</hibernate-configuration>